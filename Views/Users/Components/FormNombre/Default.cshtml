                        <input type="text" class="form-control" id="lastname" placeholder="Apellido paterno">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="secondLastname" placeholder="Apellido materno">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>